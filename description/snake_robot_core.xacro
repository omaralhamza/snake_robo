    <!-- LINK 2 -->

    <link name="link_2">
        <visual>
            <material name="orange">
                <color rgba="1 0.3 0.1 1"/>
            </material>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>           
            <geometry>
