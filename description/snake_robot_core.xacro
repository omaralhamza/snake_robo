<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  >

    <xacro:include filename="inertial_macros.xacro"/>
    
    <!-- Constants for robot dimensions -->
    <xacro:property name="PI" value="3.1415926535897931"/>

    <!-- * * * * * * my file working fine * * * * * * * -->




    <!-- * * * BASE_LINK * * * -->
    <link name="base_link">
        
    </link>

    <joint name="head_joint" type="fixed">
        <origin xyz="0.0 0.0 0.00" />
        <parent link="base_link"/>
        <child link="head_link"/>
        <axis xyz="0 0 1"/>
    </joint>
  
     <!-- TAIL LINK WHICH I HAVE CALLED FOR HEAD LINK -->

    <link name="head_link">
        <visual>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
            <material name="green">
                <color rgba="0.2 1 0.2 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" />
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- JOINT BETWEEN THE TAIL AND THE FIRST LINK -->

    <joint name="link_head_1_joint" type="revolute">
        <parent link="head_link"/>
        <child link="link_1"/>
        <limit lower="-1.5708" upper="1.5708" velocity="50.0" effort="1000.0"/>
        <origin xyz="0.0 0.3 0.0" />
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- LINK 1 -->

    <link name="link_1">
        <visual>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
             <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>        
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

        <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/Black</material>
    </gazebo>
    
    <!-- JOINT BETWEEM LINK 1 AND 2 -->

    <joint name="link_1_2_joint" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <limit lower="-1.5708" upper="1.5708" velocity="50.0" effort="1000.0"/>
        <origin xyz="0.0 0.3 0.00" />    
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- LINK 2 -->

    <link name="link_2">
        <visual>
            <material name="orange">
                <color rgba="1 0.3 0.1 1"/>
            </material>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>           
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>   
       
        <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--JOINT BETWEEN LINK 2 AND LINK 3 -->

    <joint name="link_2_3_joint" type="revolute">
        <parent link="link_2"/>
        <child link="link_3"/>
        <limit lower="-1.5708" upper="1.5708" velocity="50.0" effort="1000.0"/>
        <origin xyz="0.0 0.3 0.0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- LINK 3 -->

    <link name="link_3">
        <visual>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
       
        <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/White</material>
    </gazebo>
       
    <!-- JOINT BETWEEN LINK 3 AND LINK 4 ***NOTE THAT LINK 4 IS THE HEAD -->

    <joint name="link_3_4_joint" type="revolute">
        <parent link="link_3"/>
        <child link="link_4"/>
        <limit lower="-1.5708" upper="1.5708" velocity="50.0" effort="1000.0"/>
        <origin xyz="0.0 0.3 0.0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- HEAD LINK -->

    <link name="link_4">
        <visual>
            <material name="orange">
                <color rgba="1 0.3 0.1 1"/> 
            </material>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>  
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>