<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  >

    <xacro:include filename="inertial_macros.xacro"/>
    <!-- <xacro:include filename="material.xacro"/> -->
    <!-- Constants for robot dimensions -->
    <xacro:property name="PI" value="3.1415926535897931"/>

    <!-- * * * * * * my file working fine * * * * * * * -->




    <!-- * * * BASE_LINK * * * -->
    <link name="world"></link>

 <!-- *********************what type of joint should we have here is it contineus -->
 <!-- *********************what type of joint should we have here is it contineus -->
 <!-- *********************what type of joint should we have here is it contineus -->

    <joint name="head_joint" type="continuous">
        <origin xyz="0.0 0.0 0.00" />
        <parent link="world"/>
        <child link="head_link"/>
        <axis xyz="0 0 1"/>
    </joint>
  
     <!-- TAIL LINK WHICH I HAVE CALLED FOR HEAD LINK -->

    <link name="head_link">
        <visual>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
            <material name="green">
                <color rgba="0.2 1 0.2 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" />
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- JOINT BETWEEN THE TAIL AND THE FIRST LINK -->

    <joint name="link_head_1_joint" type="revolute">
        <parent link="head_link"/>
        <child link="link_1"/>
        <limit lower="-1.5708" upper="1.5708" velocity="50.0" effort="1000.0"/>
        <origin xyz="0.0 0.3 0.0" />
        <axis xyz="0 0 1"/>
        <joint_properties damping="6.0" friction="6.0"/>
    </joint>
    
    <!-- LINK 1 -->

    <link name="link_1">
        <visual>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
             <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.3 0.1"/>
            </geometry>
        </collision>        
        <xacro:inertial_box mass="0.1" x="0.3" y="0.1" z="0.1">
            <origin xyz="0.0 0.15 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

        <!-- GAZEBO COLOR CONFIG -->

    <gazebo reference="head_link">
        <material>Gazebo/Black</material>
    </gazebo>
    
    <!-- JOINT BETWEEM LINK 1 AND 2 -->

    <joint name="link_1_2_joint" type="revolute">
